<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Presenteie</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav>
        <a asp-area="" asp-controller="Home" asp-action="Index">Presenteie</a>
        <ul>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index">Início</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
            </li>
        </ul>
    </nav>
</header>
<main>
    @RenderBody()
</main>

<footer>
    <div>
        &copy; 2021 - Presenteie - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>