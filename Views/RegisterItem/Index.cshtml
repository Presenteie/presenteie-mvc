@model Presenteie.Models.Item
@{
    ViewData["Title"] = "Cadastrar Itens";
    var idList = ViewBag.IdList;
    Layout = "_Layout";
}

@section CSS
{
    <link rel="stylesheet" href="~/css/registeritem.css"/>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css"  />
}


<div class="registeritem">
    
    <div class="superior">
        <div class="superior-empty"></div>
        <ul>
            
        </ul>
    </div>
    
    <form class="w-100" asp-action="Create" method="post" asp-controller="RegisterItem">
        <div class="mb-3">
        
            <input type="hidden" asp-for="Id" value="@null">
            <input type="hidden" asp-for="IdList" value="@idList">
            <input type="hidden" asp-for="State" value="Purchase">
            <label>
                Imagem
                <input type="file"/>
            </label>
        
            <label>
                Nome do Produto
                <input type="text" asp-for="Name" placeholder="Cafeteira"/>
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="Name"></span>
                </div>
            </label>
            <label>
                Descrição
                <input type="text" asp-for="Description" placeholder="Eletrodomestico | Americanas"/>
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="Description"></span>
                </div>
            </label>
            <label>
                R$ Adicionar Preço
                <input type="number" min="0" step="0.01" asp-for="Value" placeholder="0,00"/>
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="Value"></span>
                </div>
            </label>
            <label>
                Nome da loja
                <input type="text" asp-for="StoreName" placeholder="Pinguim">
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="StoreName"></span>
                </div>
            </label>
            <label>
                + Adicionar Link
                <input type="url" asp-for="Link" placeholder="www.Americanas.com"/>
                <div class="invalid-feedback" style="display:block;">
                    <span asp-validation-for="Link"></span>
                </div>            
            </label>
        </div>
        <button type="submit">Salvar</button>
    </form>
</div>

@section Scripts
{
    @{ <partial name="_ValidationScriptsPartial" /> }
}