@model Presenteie.Models.User
@{
    ViewData["Title"] = "Criar uma conta";
}

@section CSS
{
    <link rel="stylesheet" href="~/css/signup.css"/>
}

<div class="signup">
    <h1>Criar uma conta</h1>
    
    <form asp-controller="SignUp" asp-action="Index" method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <label>
            Nome
            <input type="text" asp-for="Name" placeholder="Fulano"/>
            <span asp-validation-for="Name"></span>
        </label>
        <label>
            Email
            <input type="email" asp-for="Email" placeholder="seu.email@exemplo.com"/>
            <span asp-validation-for="Email"></span>
        </label>
        <label>
            Senha
            <input type="password" asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </label>

        <button type="submit">Cadastrar-se</button>
    </form>

    <a asp-controller="Login" asp-action="Index">JÃ¡ possui uma conta?</a>
</div>

@section Scripts
{
    @{ <partial name="_ValidationScriptsPartial" /> }
}
